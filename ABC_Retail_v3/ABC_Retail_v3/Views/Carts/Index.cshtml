@model IEnumerable<Cart>

@{
    ViewData["Title"] = "Cart";
    var image = "";


    if (TempData["message"] != null)
    {
       //TempData.Keep("message");
        if (TempData["cart_action"].ToString() == "Add")
        {
            <link type="text/css" href="~/css/toastr.min.css" rel="stylesheet" />
            <script type="text/javascript" src="/lib/jquery/dist/jquery.js"></script>
            <script type="text/javascript" src="~/js/toastr.min.js"></script>

            <script type="text/javascript">
                toastr.success('@TempData["message"]');
            </script>

        }

        if (TempData["cart_action"].ToString() == "Delete")
        {
            <link type="text/css" href="~/css/toastr.min.css" rel="stylesheet" />
            <script type="text/javascript" src="/lib/jquery/dist/jquery.js"></script>
            <script type="text/javascript" src="~/js/toastr.min.js"></script>

            <script type="text/javascript">
                toastr.warning('@TempData["message"]');
            </script>

        }

        if (TempData["cart_action"].ToString() == "Edit")
        {
            <link type="text/css" href="~/css/toastr.min.css" rel="stylesheet" />
            <script type="text/javascript" src="/lib/jquery/dist/jquery.js"></script>
            <script type="text/javascript" src="~/js/toastr.min.js"></script>

            <script type="text/javascript">
                toastr.success('@TempData["message"]');
            </script>

        }

        if (TempData["cart_action"].ToString() == "Order")
        {
            <link type="text/css" href="~/css/toastr.min.css" rel="stylesheet" />
            <script type="text/javascript" src="/lib/jquery/dist/jquery.js"></script>
            <script type="text/javascript" src="~/js/toastr.min.js"></script>

            <script type="text/javascript">
                toastr.success('@TempData["message"]');
            </script>

        }
    }
}
<br />

<h1>Cart Items</h1>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                Product Name
            </th>
            <th>
                Product Price
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addition_Date)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
                        image = @item.Product_id + ".jpg";
        <tr>
            <td>
                <span><img src="~/Images/@image" height="100px" class="" alt="Artwork 1"></span>
            </td>
            <td>
                <strong><span style="font-size:larger">@Html.DisplayFor(modelItem => item.Products.Product_name)</span></strong>
            </td>
            <td>
                <strong><span style="font-size:larger">R @Html.DisplayFor(modelItem => item.Products.Price)</span></strong>
            </td>
            <td>
                <strong><span style="font-size:larger">@Html.DisplayFor(modelItem => item.Quantity)</span></strong>
            </td>
            <td>
                <strong><span style="font-size:larger">@Html.DisplayFor(modelItem => item.Addition_Date)</span></strong>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CartId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.CartId">Delete</a>
                </td>

        </tr>
}
    </tbody>
</table>

@foreach (var item in Model)
{
    <div class="d-flex justify-content-end">
        <a class="btn btn-info" style="font-weight:bolder;" asp-action="Check_Out" asp-route-id="@item.Customer_id">Check Out</a>
    </div>
    break;
}
