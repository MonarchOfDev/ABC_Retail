@{
    ViewData["Title"] = "Upload Product Image";
}

<h2>Upload Product Image</h2>

<form asp-action="UploadProductImage" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Select an image to upload:</label>
        <input type="file" id="file" name="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

@if (ViewData["BlobUrl"] != null)
{
    <div class="alert alert-success mt-3">
        <strong>Success!</strong> File uploaded successfully.
        <a href="@ViewData["BlobUrl"]" target="_blank">View Image</a>
    </div>
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger mt-3">
        <strong>Error:</strong> @ViewData["Error"]
    </div>
}
